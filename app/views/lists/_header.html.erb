<nav class="mb-4">
  <h1 class="my-4">Lists</h1>
  <ul class="nav nav-tabs">
    <% @lists.each do |list| %>
      <li class="nav-item">
        <% if @list.id == list.id %>
          <%= link_to list.name, list,
                      class: "nav-link active dropdown-toggle",
                      role: "button",
                      "aria-expanded": false,
                      "data-bs-toggle": "dropdown" %>
          <ul class="dropdown-menu">
<!--            <li>-->
              <%#= link_to "Rename", "#", class: "dropdown-item" %>
<!--            </li>-->
            <li>
              <%= link_to "Delete", list, class: "dropdown-item text-danger", data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure you want to delete list #{list.name}?",
              } %>
            </li>
          </ul>
        <% else %>
          <%= link_to list.name, list, class: "nav-link" %>
        <% end %>
      </li>
    <% end %>

    <li class="nav-item">
      <% if current_page?(:controller => 'lists', :action => 'new') %>
        <%= link_to "+", "#", class: "nav-link active" %>
      <% else %>
        <%= link_to "+", new_list_path, class: "nav-link" %>
      <% end %>
    </li>
  </ul>
</nav>
